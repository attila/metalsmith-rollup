{
  "name": "metalsmith-rollup",
  "version": "0.2.0",
  "description": "A Rollup plugin for Metalsmith",
  "main": "./lib/",
  "scripts": {
    "commit": "git-cz",
    "lint": "standard",
    "test": "npm run lint && npm run coverage",
    "test:unit": "mocha -R dot test/index.js",
    "coverage": "istanbul cover _mocha -- -R dot test/index.js && codecov"
  },
  "keywords": [
    "metalsmith",
    "rollup"
  ],
  "repository": {
    "url": "attila/metalsmith-rollup"
  },
  "author": "Attila Beregszaszi <attila@frontseed.com> (http://attilab.com/)",
  "license": "MIT",
  "dependencies": {
    "rollup": "^0.25.7"
  },
  "devDependencies": {
    "assert-dir-equal": "^1.0.1",
    "codecov": "^1.0.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "istanbul": "^0.4.3",
    "metalsmith": "^2.1.0",
    "mocha": "^5.1.1",
    "standard": "^11.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
